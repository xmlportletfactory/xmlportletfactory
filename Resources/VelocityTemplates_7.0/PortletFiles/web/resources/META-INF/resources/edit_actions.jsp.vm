
#set( $createPath = "${webResourcesPath}/${snakeCaseEntityName}" )
#set( $createName = "/edit_actions.jsp" )

<%@include file="../init.jsp" %>

<%@ page import="${basePackage}.model.${classDef_name}"%>
<%@ page import="${basePackage}.service.${classDef_name}LocalServiceUtil"%>
<%@ page import="${basePackage}.service.permission.${classDef_name}EntryPermission"%>
<%@ page import="com.liferay.portal.kernel.util.HttpUtil"%>
<%@ page import="com.liferay.portal.kernel.language.UnicodeLanguageUtil"%>
<%@ page import="com.liferay.portal.kernel.util.Constants"%>
#foreach($detailfile in $application.getDetailFiles().getDetailFileArray())
#foreach($detailapplication in $applications)
#if (${detailapplication.getClassDef().getName()} == ${detailfile.getDetailFileClassName()})
<%@ page import="${basePackage}.service.${detailapplication.getClassDef().getName()}LocalServiceUtil" %>
#end
#end
#end
#if ($hasTrash)	
<%@ page import="com.liferay.portlet.trash.util.TrashUtil" %>
#end
<%
ResultRow row = (ResultRow)request.getAttribute(WebKeys.SEARCH_CONTAINER_RESULT_ROW);
${classDef_name} ${classInstance} = (${classDef_name})row.getObject();

long groupId = ${classInstance}.getGroupId();
String name = ${classDef_name}.class.getName();
String primKey = String.valueOf(${classInstance}.getPrimaryKey());
boolean noDetailsRows = true;
#set ($firstDetail="true")
#foreach($detailfile in $application.getDetailFiles().getDetailFileArray())
#if(${firstDetail}=="true")
String ${detailfile.getConnectionFieldName()}Str = ${classInstance}.get${detailfile.getConnectionFieldName().substring(0,1).toUpperCase()}${detailfile.getConnectionFieldName().substring(1)}() + "";
#set($firstDetail="false")
#end

#foreach($detailapplication in $applications)
#if (${detailapplication.getClassDef().getName()} == ${detailfile.getDetailFileClassName()})
	if(!${detailapplication.getClassDef().getName()}LocalServiceUtil.findAllIn${detailfile.getConnectionFieldName()}(${classInstance}.getPrimaryKey()).isEmpty()) {
		noDetailsRows = false;
	}
#end
#end

#end

%>
<liferay-ui:icon-menu direction="left-side" icon="" markupView="lexicon" message="" showWhenSingleIcon="true">
#if (${browsemode}=="true")

	<c:if test="<%= ${classDef_name}EntryPermission.contains(permissionChecker, ${classInstance}, ActionKeys.UPDATE) %>">
		<portlet:renderURL var="edit${application.getClassDef().getName()}URL">
			<portlet:param name="resourcePrimKey" value="<%=primKey %>" />
#set ($firstDetail="true")
#foreach($detailfile in $application.getDetailFiles().getDetailFileArray())
#if(${firstDetail}=="true")
			<portlet:param name="${detailfile.getConnectionFieldName()}" value="<%= ${detailfile.getConnectionFieldName()}Str %>" />
#set($firstDetail="false")
#end
#end
			<portlet:param name="<%= Constants.CMD %>" value="<%= Constants.UPDATE %>" />
			<portlet:param name="mvcRenderCommandName" value="/${snakeCaseEntityNamePlural}/edit_${snakeCaseEntityName}" />
			<portlet:param name="redirect" value="<%= currentURL %>" />
			<portlet:param name="backURL" value="<%= currentURL %>" />
		</portlet:renderURL>

		<liferay-ui:icon message="edit" url="<%=edit${application.getClassDef().getName()}URL.toString() %>" />
	</c:if>
#end
#if (${deletemode}=="true")
	<c:if test="<%= ${classDef_name}EntryPermission.contains (permissionChecker, ${classInstance}, ActionKeys.DELETE) %>">
#if ($hasTrash)	

		<portlet:actionURL name='<%= TrashUtil.isTrashEnabled(scopeGroupId) ? "moveToTrash${application.getClassDef().getName()}" : "delete${application.getClassDef().getName()}" %>' var="delete${application.getClassDef().getName()}URL" >
					<portlet:param name="resourcePrimKey" value="<%= primKey %>" />	
		</portlet:actionURL>
								
#else
		<portlet:actionURL name="/${snakeCaseEntityNamePlural}/edit_${snakeCaseEntityName}" var="delete${application.getClassDef().getName()}URL">
			<portlet:param name="resourcePrimKey" value="<%= primKey %>" />
			<portlet:param name="<%= Constants.CMD %>" value="<%= Constants.DELETE %>" />
		</portlet:actionURL>
#end
		<c:choose>
			<c:when test="<%= !noDetailsRows %>">
			<%
			String deleteUrl = null;
#if ($hasTrash)			

			if (TrashUtil.isTrashEnabled(scopeGroupId)) {				
				deleteUrl = "javascript:if(confirm('" + UnicodeLanguageUtil.get(locale, "are-you-sure-you-want-to-move-this-entry-to-the-recycle-bin") + "')){submitForm(document.hrefFm, '" + HttpUtil.encodeURL(delete${application.getClassDef().getName()}URL) + "');}";
			} else {				
				deleteUrl = "javascript:if(confirm('" + UnicodeLanguageUtil.get(locale, "confirm-delete") + "')){submitForm(document.hrefFm, '" + HttpUtil.encodeURL(delete${application.getClassDef().getName()}URL) + "');}";
			}		
#else			
			deleteUrl = "javascript:if(confirm('" + UnicodeLanguageUtil.get(locale, "confirm-delete") + "')){submitForm(document.hrefFm, '" + HttpUtil.encodeURL(delete${application.getClassDef().getName()}URL) + "');}";
#end
			 
			%>
					
			<liferay-ui:icon-delete url="<%= deleteUrl %>" />

			</c:when>
			<c:otherwise>
		    	<liferay-ui:icon-delete url="<%=delete${application.getClassDef().getName()}URL.toString() %>" />
		    </c:otherwise>
		</c:choose>
	</c:if>

#end


<c:if test="<%= ${classDef_name}EntryPermission.contains(permissionChecker, ${classInstance}, ActionKeys.PERMISSIONS) %>">
		<liferay-security:permissionsURL
			modelResource="${basePackage}.model.${classDef_name}"
			modelResourceDescription="${classDef_name}"
			resourcePrimKey="<%= String.valueOf(primKey) %>"
			var="permissionsEntryURL"
			windowState="<%= LiferayWindowState.POP_UP.toString() %>"
		/>

		<liferay-ui:icon
			message="permissions"
			method="get"
			url="<%= permissionsEntryURL %>"
			useDialog="true"
		/>
</c:if>
</liferay-ui:icon-menu>
